---
import Card from "./Card.astro";
import '../styles/cards.sass';

const cards = [
  {
    title : "Zero Javascript Runtime",
    content : "Astro render HTML on the server and strips away any remaining, unused Javascript"
  },
  {
    title : "The power of Islands",
    content : "Need interactive UI? Load individual, non-blocking component Islands in parallel"
  },
  {
    title : "Lazy-Loading Islands",
    content : "Components only hydrate when they scroll into view. If you don't see it, Astro won't load it."
  }
]
---

<section class="card-section">
  <div class="container">
    <ul class="cards">
      {
        cards.map(card => (
          <Card title={card.title} content={card.content}/>
        ))
      }
    </ul>
  </div>
</section>